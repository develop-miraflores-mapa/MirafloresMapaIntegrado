<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- The definition of the Root Spring Container shared by all Servlets 
		and Filters -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		/WEB-INF/application-data.xml
		/WEB-INF/application-config-service.xml
		/WEB-INF/application-mail.xml
		
	<!-- 	/WEB-INF/application-security.xml -->
		</param-value>
	</context-param>

	<!-- Creates the Spring Container shared by all Servlets and Filters -->

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
<!-- 	
	<listener>
		<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
	</listener> -->
	


	<!-- Processes application requests -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>

	 <filter>
		<filter-name>SesionFilter</filter-name>
		<filter-class>pe.gob.miraflores.mobile.filter.FilterSesion</filter-class>
		<init-param>
			<param-name>test-param</param-name>
			<param-value>Initialization Paramter</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SesionFilter</filter-name>
		<url-pattern>
				/cierre-calles/registro
		</url-pattern>
		<url-pattern>
				/cierre-calles/bandeja-cierre-calles
		</url-pattern>
		<url-pattern>
				/cierre-calles/consulta-cierre-calles
		</url-pattern>
	</filter-mapping> 
	
	
	
<filter>
		<filter-name>LoginMapaFilter</filter-name>
		<filter-class>pe.gob.miraflores.mobile.filter.FilterLoginMapa</filter-class>
		<init-param>
			<param-name>test-param</param-name>
			<param-value>Initialization Paramter</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>LoginMapaFilter</filter-name>
		<url-pattern>
				/cierre-calles/mapa
		</url-pattern>
		<url-pattern>
				/cierre-calles/mapa/admin
		</url-pattern>
		<url-pattern>
				/mapa-incidencia/bandeja
		</url-pattern>
	
	</filter-mapping>
	
	

