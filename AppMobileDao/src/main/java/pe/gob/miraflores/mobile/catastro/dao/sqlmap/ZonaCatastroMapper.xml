  <select id="selectSectorZonaByCordenada" parameterType="HashMap" resultType="HashMap">
	
		select 
			replace((select upper(s.text_sector) from catastro.sectores s where s.id_sector = substring(z.id_zona from 1 for 8)), 'SECTOR', 'ZONA') as nombreSector
			,substring(z.id_zona from 1 for 8) as idSector
			,z.* 
		from catastro.zonas z
		where 
		st_contains(ST_Transform(z.GEOMETRIA,4326) ,ST_GeometryFromText('POINT(${PUNTO})',4326) ) ='t'
				   
	</select>
	
	<select id="selectPoligonoZona" resultType="HashMap">
		
